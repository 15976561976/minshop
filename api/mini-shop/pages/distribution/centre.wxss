/* pages/distribution/centre.wxss */
.header{
	width: 100%;
	height: auto;
	background: #8eaefd;
	padding: 0rpx 25rpx;
	box-sizing: border-box;
}
.header .user{
	width: inherit;
	height: 118rpx;
	padding: 34rpx 0rpx;
	border-bottom: #fff solid 2rpx;
	display: flex;
	justify-content: flex-start;
}
.header .user .portrait{
	width: 120rpx;
	height: 120rpx;
	border: 2rpx #fff solid;
	border-radius: 50%;
	margin-right: 34rpx;
}
.header .user .message text{
	display: block;
	line-height: 60rpx;
	font-size: 34rpx;
	color: #000;
}
.header .user .message view{
	line-height: 60rpx;
	font-size: 28rpx;
	color: #333;
}
.header .money{
	width: inherit;
	height: 120rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.header .money .number{
	font-size: 28rpx;
	color: #333;
	line-height: 60rpx;
}
.header .deposit{
	width: 140rpx;
	height: 64rpx;
	border-radius: 32rpx;
	background: #ccc;
	color: #fff;
	text-align: center;
	line-height: 64rpx;
	font-size: 30rpx;
}
.header .on{
	background: #fff;
	color: #000;
}
.reap{
	width: 100%;
	height: 180rpx;
	background: #fff;
	display: flex;
	justify-content: center;
	margin-bottom: 20rpx;
}
.reap .li{
	width: 50%;
	height: inherit;
	text-align: center;
}
.reap .li text{
	font-size: 30rpx;
	line-height: 100rpx;
}

.reap .li:first-child text{
	color: #80c269;
}
.reap .li:last-child text{
	color: #f7423e;
}
.piece{
	width: 100%;
	height: auto;
	display: flex;
	justify-content: flex-start;
	flex-wrap: wrap;
}
.piece .list{
	width: 33%;
	height: 202rpx;
	background: #fff;
	margin-right: 2rpx;
	margin-bottom: 2rpx;
	text-align: center;
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.piece .list .iconfont{
	font-size: 48rpx;
	line-height: 70rpx;
}

.piece .list:nth-child(1) .iconfont{
	color: #ebd200;
}
.piece .list:nth-child(2) .iconfont{
	color: #3bacf2;
}
.piece .list:nth-child(3) .iconfont{
	color: #ea3639;
}
.piece .list:nth-child(4) .iconfont{
	color: #84d57b;
}
.piece .list:nth-child(5) .iconfont{
	color: #e39357;
}
.piece .list text{
	line-height: 70rpx;
	font-size: 30rpx;
}
.avatar {
  width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
}