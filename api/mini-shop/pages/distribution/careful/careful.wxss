/* pages/distribution/careful/careful.wxss */
.nav {
	width: 100%;
  height: 97rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
	position: fixed;
	top: 0;
	
}
.container{
	padding-top: 97rpx;
}
.nav-item {
  height: 97rpx;
  font-size: 32rpx;
  display:flex;
  align-items: center;
}
.active {
  border-bottom: 4rpx solid #f7423e;
  box-sizing: border-box;
}
.title{
	line-height: 68rpx;
	color: #666;
	font-size: 32rpx;
	padding-left: 30rpx;
	box-sizing: border-box;
}
.main{
	width: 100%;
	height: auto;
	margin-top: 20rpx;
}
.main .list{
	height: 120rpx;
	border-bottom: 2rpx solid #ddd;
	display: flex;
	justify-content: space-between;
	background: #fff;
	text-align: center;
	padding: 20rpx 0rpx;
	box-sizing: border-box;
}
.main .list .date{
	width: 30%;
	height: auto;
	font-size: 30rpx;
	color: #333;
	line-height: 44rpx;
	display: flex;
	flex-direction: column;
}
.main .list .way{
	width: 40%;
	height: auto;
	font-size: 32rpx;
	color: #333;
	line-height: 80rpx;
}
.main .list .money{
	width: 30%;
	height: auto;
	font-size: 30rpx;
	color: #333;
	line-height: 44rpx;
}
.main .list .money text{
	color: #999;
}
.nomore {
  margin: 0 0 26rpx 0;
  display: flex;
  justify-content: center;
}
.nomore-text {
  font-size: 24rpx;
  color: #999999;
	line-height: 70rpx;
}
