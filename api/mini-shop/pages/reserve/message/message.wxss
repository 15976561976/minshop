/* pages/reserve/message/message.wxss */
.head{
	width: 710rpx;
	height: auto;
	background: #fff;
	border-radius: 10rpx;
	overflow: hidden;
	margin: 20rpx auto 0 auto;
	padding: 0rpx 20rpx;
	box-sizing: border-box;
}
.head .list{
	width: auto;
	height: 98rpx;
	display: flex;
	justify-content: space-between;
	line-height: 98rpx;
	color: #333;
	font-size: 28rpx;
	border-bottom: 2rpx solid #ddd;
}
.head .list:last-child{
	border-bottom: 2rpx solid #fff;
}
.title{
	line-height: 80rpx;
	font-size: 30rpx;
	color: #333;
	margin-left: 20rpx;
}
.select{
	width: 710rpx;
	height: auto;
	color: #ff4e67;
	background: #fff;
	border-radius: 10rpx;
	overflow: hidden;
	padding: 0rpx 20rpx;
	box-sizing: border-box;	
	margin: 0 auto 20rpx auto;
	font-size: 28rpx;
	line-height: 98rpx;
}

.select .hint{
	color: #999;
}
.select .name{
	display: flex;
	justify-content: space-between;
	color: #333;
}
.select .name span{
	color: #666;
	font-size: 24rpx;
}
.select .add{
	border-top: 2rpx solid #ddd;
}
.select .add .iconfont{
	float: left;
	margin-right: 10rpx;
}



.option{
	width: 100%;
	height: auto;
	max-height: 700rpx;
	background: #FFFFFF;
	padding-bottom: 30rpx;
	position: fixed;
	bottom: -700rpx;
	z-index: 2;
	transition: 0.2s;
}
.optionOn{
	bottom: 0rpx;
}
.option .title{
	position: relative;
	text-align: center;	
}
.option .title text{
	font-size: 36rpx;
	color: #000;
	line-height: 130rpx;
}
.option .title .iconfont{
	font-size: 36rpx;
	position: absolute;
	color: #999;
	right: 32rpx;
	top: 32rpx;
}
.option .li{
	width: 100%;
	height: auto;
	display: flex;
	font-size: 30rpx;
	line-height: 100rpx;
	justify-content: space-between;
	margin-top: -2rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
	align-items: center;
}
.option .li span{
	width: 10%;
	text-align: center;
	border-top: 2rpx solid #DDDDDD;
}
.option .li view{
	border-top: 2rpx solid #DDDDDD;
	width: 90%;
	height: auto;
}
.option .li .add{
	border-top: 2rpx solid #DDDDDD;
	width: 90%;
}
.bg{
	width: 100%;
	height: 100%;
	position: fixed;
	z-index: 1;
	background: #000000;
	opacity: 0.4;
	transition: 0.2s;
	visibility: hidden;
	top: 0;
}
.bgOn{
	visibility: visible;
}
.option .li .addName{
	width: 30%;
	height: 76rpx;
	border-radius: 38rpx;
	background: #ff4e67;
	margin-top: 46rpx;
	color: #fff;
	font-size: 32rpx;
	line-height: 76rpx;
}
button{
	width: 710rpx;
	height: auto;
	color: #fff;
	font-size: 30rpx;
	background: #ff4e67;
}
.option .delCard{
	font-size: 26rpx;
	color: #999;
}
