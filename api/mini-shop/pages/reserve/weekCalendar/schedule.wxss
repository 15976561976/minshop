/* miniprogram/pages/test/test.wxss */

.hint{
	width: 710rpx;
	height: 56rpx;
	border: 2rpx solid #ddd;
	background: #fff;
	margin: 20rpx;
	line-height: 56rpx;
	color: #666;
	font-size: 20rpx;
	border-radius: 10rpx;
}
.hint .iconfont{
	float: left;
	margin: 0 10rpx 0 20rpx;
	color: #f39a25;
}
.ul{
	margin-top: 20rpx;
}
.li{
	width: 710rpx;
	height: 160rpx;
	border-radius: 10rpx;
	background: #fff;
	padding: 0 20rpx;
	box-sizing: border-box;
	margin: 0 auto 30rpx auto;
	display: flex;
	justify-content: space-between;
	align-items: center;
	
}
.li .img{
	width: 118rpx;
	height: 118rpx;
	border-radius: 50%;
	overflow: hidden;
	margin-right: 20rpx;
	background: #00BFFF;
}
.li .img image{
	width: 100%;
	height: 100%;
}
.li .cont{
	flex-grow: 1;
	display: flex;
	justify-content: center;
	flex-direction: column;
}
.li .cont .name{
	font-size: 26rpx;
	color: #000;
	font-weight: bold;
}
.li .cont .post{
	font-size: 22rpx;
	color: #999;
	line-height: 40rpx;
}
.li .cont .current{
	font-size: 24rpx;
	color: #ff4e67;
	font-weight: bold;
}
.nolist{
	width: 710rpx;
	height: 140rpx;
	background: #fff;
	font-size: 28rpx;
	color: #666;
	text-align: center;
	line-height: 140rpx;
	border-radius: 10rpx;
	margin: 20rpx auto;
}
.surplus{
	font-size: 22rpx;
}